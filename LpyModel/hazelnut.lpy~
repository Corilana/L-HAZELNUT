__lpy_code_version__ = 1.1

def __initialiseContext__(context):
	scalars = [('SEED', 'Integer', 49, 0, 100)]
	context["__scalars__"] = scalars
	for s in scalars:
		if not s[1] == "Category" : context[s[0]] = s[2]
